<h2>Statistics</h2>
<div class="row text-center">
    <div class="col-md-4">
        <h3>Devices</h3>
        <div class="radial-progress">
            {{#if model.hasData}}
                {{#data-visual as |ctx width height|}}
                    {{radial-progress
                        select=ctx.svg.select.chart
                        width=width
                        height=height
                        progress=model.devices.percentage}}

                    {{#tooltip-on-component}}
                        Devices with no errors.
                    {{/tooltip-on-component}}
                {{/data-visual}}
                <p>{{model.devices.ok}}/{{model.devices.total}}</p>
            {{else}}
                <p>No data</p>
            {{/if}}
        </div>
    </div>
